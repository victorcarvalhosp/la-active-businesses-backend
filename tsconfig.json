{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "target": "es6",
    "outDir": "./dist",
    "baseUrl": "./lib",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "lib/**/*.ts",
    "config/db.config.ts",
    "server.ts",
    "routes/routes.ts",
    "app.ts"
  ],
  "exclude": ["node_modules"]
}
